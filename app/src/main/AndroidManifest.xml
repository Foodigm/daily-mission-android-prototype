<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.melmy.melmyprototype">

    <application
        android:name="com.melmy.melmyprototype.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.melmy.melmyprototype.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.melmy.melmyprototype.missionaddedit.MissionAddEditActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity android:name="com.melmy.melmyprototype.missionlist.MissionListActivity" />
        <activity android:name="com.melmy.melmyprototype.missiondetail.MissionDetailActivity" />
        <activity android:name="com.melmy.melmyprototype.home.HomeActivity" />
        <activity android:name="com.melmy.melmyprototype.view.HistoryActivity" />
    </application>

</manifest>